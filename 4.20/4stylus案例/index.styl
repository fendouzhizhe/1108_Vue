$fontColor= #02a774
// 引入重置样式文件
@import './css/reset.css'
@import './css/mixins.styl'
html,body
  width 100%
  height 50px
  overflow hidden
  .wrap
    width 100%
    height 100%
    .footer
      width 100%
      height 50px
      position fixed
      left 0
      bottom 0
      display flex
      .footerItem
        display flex
        flex 1
        flex-direction column
        justify-content center
        align-items center
        &.active
          color $fontColor
        .iconfont
          font-size 20px
        span
          margin-top 3px

